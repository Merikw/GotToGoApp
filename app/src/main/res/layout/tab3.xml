<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.gottogo.gottogoapplication.MainTabbed"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <fragment
        android:id="@+id/place_autocomplete_fragment2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        class = "com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"/>

    <Button
        android:id="@+id/btnCamera"
        style="@android:style/Widget.Material.Button"
        android:layout_width="146dp"
        android:layout_height="70dp"
        android:text="Camera"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnAdd"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="69dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="337dp"
        android:layout_height="185dp"
        app:srcCompat="@color/cast_expanded_controller_ad_container_white_stripe_color"
        android:layout_marginTop="98dp"
        app:layout_constraintTop_toBottomOf="@+id/place_autocomplete_fragment2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnAdd"
        style="@android:style/Widget.Material.Button"
        android:layout_width="145dp"
        android:layout_height="72dp"
        android:text="Add image"
        android:layout_marginRight="23dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="69dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</android.support.constraint.ConstraintLayout>
